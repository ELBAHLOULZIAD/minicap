<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confnoti">


    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="12dp"
        android:text="Switch"
        app:layout_constraintBottom_toTopOf="@+id/configtext"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="94dp"
        android:background="@drawable/custom_buttons"
        android:text="@string/save"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelbutton"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/custom_buttons"
        android:text="Close"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savebutton" />

    <TextView
        android:id="@+id/configtext"
        android:layout_width="158dp"
        android:layout_height="29dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="4dp"
        android:ems="14"
        android:importantForAutofill="no"
        android:includeFontPadding="true"
        android:inputType="number"
        android:text="Please enter a snooze time"

        android:textColor="@color/colorPrimary"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintBottom_toTopOf="@+id/timetext"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/timetext"
        android:layout_width="209dp"
        android:layout_height="51dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="12dp"
        android:autofillHints=""
        android:background="@drawable/edit_text_borders"
        android:ems="2"
        android:hint="hh:mm:ss"
        android:inputType="datetime"
        android:maxLength="8"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/savebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="309dp" />

</androidx.constraintlayout.widget.ConstraintLayout>